// Create layer selector
function createSelector(layer) {
var dt='1815/06/15 00:00 AM'.split(" ")
var day=dt[0]
var hour=dt[1]
var ampm=dt[2]

var $options = $(".layer_selector").find("li");
$options.click(function(e) {
		var $li = $(e.target);
		var selected = $li.attr('data');
		var type = $li.data('type');
		if (type === "day") {
				$options.removeClass('d_selected');
				day=selected;
				$li.addClass('d_selected');
		} else if (type ==="ampm") {
        $options.removeClass('a_selected');
        ampm=selected;
        $li.addClass('a_selected');
    } else {
			$options.removeClass('h_selected');
			hour=selected
			$li.addClass('h_selected');
		}
    var sql="SELECT * FROM cobMoves21 where datetime='" + day + " " + hour + " " +ampm +"' order by army desc";
		layer.setSQL(sql);
    console.log(sql)
});
