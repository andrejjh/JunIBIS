<h3><%= t('map.legends')%></h3>
<ul>
<% @legends.each do |l| %>
<li><%= link_to l.name, l%></li>
<%end%>
</ul>
<hr>
<h3><%= t('map.maps')%></h3>
<table class="table table-striped"><tr>
  <th></th>
  <th><%= t('map.code')%></th>
	<th><%= t('map.datetime')%></th>
</tr>
<% @maps.each do |m| %>
  <tr>
    <td><%if !m.image.nil?%><%= link_to image_tag("maps/" + m.image ,width: "150"), m, :target => "_blank" %><%end%></td>
    <td><%= link_to m.code, m, :target =>"_blank" %></td>
		<td><%= m.datetime %></td>
</tr>
<%end%>
</table>
<h3><%= t('map.zooms')%></h3>
<ul>
<% @zooms.each do |z| %>
  <li><%= link_to z.name, z, :target =>"_blank" %>: <%= z.description %></li>
<%end%>
</ul>
<hr>
