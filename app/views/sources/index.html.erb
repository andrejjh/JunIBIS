<h3><%= t('menu.sources')%></h3>
<% @sourcegroups.each do |sg| %>
<h4><%= sg.name %></h4>
<table class="table table-striped"><tr>
  <th><%= t('source.image')%></th>
	<th><%= t('source.reference')%></th>
</tr>
<% sg.sources.each do |s| %>
  <tr>
    <td><%if !s.image.nil?%><%= link_to image_tag("refs/" + s.image ,width: "60"), s %><%end%></td>
		<td><%= s.reference%></td>
</tr>
<%end%>
</table>
<%end%>
