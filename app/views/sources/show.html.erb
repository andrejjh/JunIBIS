<h3><%= @source.code %></h3>
<div class="row">
	<div class="col-md-2">
		<%if !@source.image.nil?%><%= image_tag "refs/" + @source.image,width: "120" %><%end%>
	</div>
	<div class="col-md-10">
		<dl class="dl-horizontal">
			<dt><%= t('source.reference')%>:</dt><dd><%= @source.reference %></dd>
			<dt><%= t('source.units')%>:</dt><dd><%= @source.units.count() %></dd>
			<dt><%= t('source.people')%>:</dt><dd><%= @source.people.count() %></dd>
		</dl>
	</div>
</div>
